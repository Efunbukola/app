<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e9e5e4">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cover_holder"
        android:layout_alignParentLeft="true">

        <ProgressBar
            android:orientation="horizontal"
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:adjustViewBounds="false"
            android:layout_centerInParent="true"
            android:indeterminate="false" />

        <ImageView
            android:orientation="horizontal"
            android:id="@+id/cover"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:layout_alignParentTop="false"
            android:adjustViewBounds="false"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:minHeight="350dp" />

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:visibility="gone"
        android:layout_below="@+id/cover_holder"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/video_info_holder"
        android:background="#ffffff"
        android:layout_below="@+id/cover_holder"
        android:minHeight="100dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Technology"
            android:id="@+id/channel"
            android:textSize="18sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:typeface="sans"
            android:layout_alignBottom="@+id/date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:id="@+id/divider"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MLS"
            android:id="@+id/provider"
            android:textColor="#c8000000"
            android:textSize="16sp"
            android:autoText="false"
            android:typeface="sans"
            android:layout_alignParentLeft="false"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="10dp"
             />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Top 5 Goals of 2014 Chips | Year in Review"
            android:id="@+id/title"
            android:textSize="24sp"
            android:maxLines="3"
            android:typeface="sans"
            android:textColor="#c8000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="false"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:paddingEnd="15dp"
            android:alpha="87"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Microfost today announced the realese of an updated version of its Skype IOS client app..."
            android:id="@+id/desc"
            android:layout_alignParentBottom="false"
            android:layout_alignLeft="@+id/title"
            android:textColor="#000000"
            android:maxLines="4"
            android:layout_below="@+id/provider"
            android:layout_marginTop="5dp"
            android:paddingEnd="15dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1 day ago"
            android:id="@+id/date"
            android:textSize="16sp"
            android:textColor="#68000000"
            android:typeface="sans"
            android:layout_alignLeft="@+id/provider"
            android:layout_alignStart="@+id/provider"
            android:layout_below="@+id/provider"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:src="@drawable/empty_channel_place_holder_blue"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</RelativeLayout>

