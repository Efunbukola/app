<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/header"
        android:background="#00010101"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
        android:id="@+id/root"
    android:orientation="vertical"
    android:transitionGroup="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/channel_info_holder"
        android:touchscreenBlocksFocus="false"
        android:visibility="gone">

        <UtilityClasses.StyledTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:id="@+id/from"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:textSize="16sp"
            android:textColor="#b0b0b0"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:text_style="normal"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:id="@+id/cover_holder"
        android:background="@color/primary">

        <ProgressBar
            android:orientation="horizontal"
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:adjustViewBounds="false"
            android:layout_centerInParent="true"
            android:indeterminate="false" />
        <View
            android:orientation="horizontal"
            android:id="@+id/menu_anchor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"/>

        <ImageView
            android:orientation="horizontal"
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="false"
            android:adjustViewBounds="false"
            android:visibility="invisible"
            android:layout_centerInParent="true" />

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
        android:src="@drawable/play" />

        <UtilityClasses.StyledTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/watched_indicator"
            android:layout_gravity="center_horizontal|top"
            android:text="WATCHED âœ“"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fc242424"
            android:visibility="gone"
            android:id="@+id/menu_holder"
            android:orientation="vertical">

            <UtilityClasses.StyledTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share"
                android:layout_gravity="left|top"
                android:text="Share"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp" />

            <UtilityClasses.StyledTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favorite"
                android:layout_gravity="left|center_vertical"
                android:text="Favorite"
                android:textColor="#ffffff"
                android:textSize="45dp"
                android:layout_marginLeft="10dp" />

            <UtilityClasses.StyledTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copy"
                android:layout_gravity="left|center_vertical"
                android:text="Copy Link"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:layout_marginLeft="10dp" />

            <UtilityClasses.StyledTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gone"
                android:text="I don&apos;t want to see this"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp" />
        </LinearLayout>



        <UtilityClasses.StyledTextView
            app:text_style="normal"
            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YouTube"
                    android:id="@+id/type"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textIsSelectable="false" />
        <android.support.v7.widget.CardView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_holder"
            app:cardElevation="1dp">

        <UtilityClasses.StyledTextView
            app:text_style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technology"
            android:id="@+id/channel"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:autoText="false"
            android:visibility="visible"
            android:padding="4dp"
            android:background="#5c81a6"
            />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_info_holder"
        android:minHeight="75dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <UtilityClasses.StyledTextView
        app:text_style="medium"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MLS"
            android:id="@+id/provider"
            android:textSize="16sp"
            android:textColor="@color/primary"
    android:alpha="54"
    android:textStyle="normal"
    android:visibility="visible"
    android:layout_alignTop="@+id/imageViewHolder"
    android:layout_toRightOf="@+id/imageViewHolder"
    android:layout_marginLeft="5dp"
    android:singleLine="true"
            android:textIsSelectable="false" />

        <UtilityClasses.StyledTextView
            app:text_style="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Top 5 Goals of 2014 Chips "
            android:id="@+id/title"
            android:textSize="22sp"
            android:maxLines="3"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <UtilityClasses.StyledTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Microfost today announced the realese of an updated version of its Skype IOS client app..."
            android:id="@+id/desc"
            android:layout_alignParentBottom="false"
            android:textColor="#1d1d1d"
            android:maxLines="3"
            app:text_style="normal"
            android:layout_below="@+id/title"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:ellipsize="end"
            android:isScrollContainer="false"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewHolder"
            android:layout_below="@+id/desc"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            android:visibility="visible">

            <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView"
            android:src="@drawable/empty_channel_place_holder_grey"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:baselineAlignBottom="false" />
        </android.support.v7.widget.CardView>


        <UtilityClasses.StyledTextView
            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day ago"
                    android:id="@+id/date"
                    android:textSize="16sp"
                    android:textColor="#c0c0c0"
            app:text_style="medium"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textIsSelectable="false"
            android:visibility="visible"
            android:layout_alignTop="@+id/provider"
            android:layout_toRightOf="@+id/provider"
            android:layout_toEndOf="@+id/provider"
            android:layout_marginStart="28dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/fav"
            android:background="@drawable/bookmark"
            android:visibility="gone"
            android:layout_alignTop="@+id/date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginRight="10dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/overflow"
            android:background="@drawable/repost"
            android:visibility="gone"
            android:layout_alignTop="@+id/date"
            android:layout_toLeftOf="@+id/fav"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
