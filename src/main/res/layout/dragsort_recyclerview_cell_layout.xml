<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3dp"
    android:layout_margin="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

    <View
        android:layout_width="15dp"
        android:layout_height="fill_parent"
        android:id="@+id/header"
        android:visibility="gone"
        android:background="#6a6a6a" />

<RelativeLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/channel_item" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/cover_holder">

        <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/cover"
            android:visibility="invisible"
            android:contentDescription="null"/>

        <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progbar"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            style="?android:attr/progressBarStyleSmall"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:indeterminate="false" />

    </RelativeLayout>

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
        android:id="@+id/title_holder"
        android:baselineAligned="false"
        android:background="@drawable/gradient_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="fill">

        <UtilityClasses.StyledTextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/title" android:textSize="20sp" android:textColor="#FFFFFF" android:singleLine="false" android:ellipsize="end"
            android:text="Gaming"
            android:maxLines="2"
            app:text_style="bold"
            android:layout_marginLeft="15dp"
            android:layerType="software"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/cover_title_holder"
        android:background="@drawable/gradient_bg90">

        <UtilityClasses.StyledTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mark Wahlberg on how he prepared for his role in &quot;The Gambler"
            android:id="@+id/cover_title"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            app:text_style="medium"
            android:layerType="software"
            android:visibility="visible"
            android:textColor="#ffffffff"
            android:singleLine="false"
            android:layout_marginTop="20dp"
            android:maxLines="2" />

    </LinearLayout>

</RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
